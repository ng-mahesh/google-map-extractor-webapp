# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/google-maps-extractor

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
# Note: Access tokens now expire in 15 minutes (hardcoded for security)
# Refresh tokens expire in 7 days (stored in database)

# Rate Limiting (Throttling)
THROTTLE_TTL=60000          # Time window in milliseconds (60000 = 1 minute)
THROTTLE_LIMIT=10           # Max requests per time window (global default)
# Note: Auth endpoints have stricter limits (3 for register, 5 for login)

# Scraper Configuration
MAX_RESULTS_PER_KEYWORD=50
SCRAPER_TIMEOUT=60000
HEADLESS_BROWSER=true

# Scraper Reliability & Debug Settings
SCRAPER_DEBUG_MODE=false              # Enable debug artifacts (screenshots, HTML dumps)
SCRAPER_SAVE_SCREENSHOTS=true         # Save screenshots on errors
SCRAPER_SAVE_HTML_DUMPS=true          # Save HTML dumps on errors
DEBUG_RETENTION_DAYS=7                # Days to keep debug files
DEBUG_BASE_PATH=./debug               # Base path for debug artifacts

# Scraper Checkpointing
SCRAPER_CHECKPOINT_INTERVAL=10        # Save checkpoint every N places
SCRAPER_ENABLE_CHECKPOINTS=true       # Enable checkpoint save/resume

# Scraper Retry Logic
SCRAPER_MAX_RETRIES=3                 # Max retry attempts for failed operations
SCRAPER_RETRY_DELAY=1000              # Initial retry delay in milliseconds

# CORS
CORS_ORIGIN=http://localhost:3000

# Optional: Redis Configuration (for job queue and caching - recommended for production)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Optional: Sentry Configuration (for error tracking - recommended for production)
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Logging Configuration
# LOG_LEVEL=info
